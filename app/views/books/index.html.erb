<h1>Books</h1>
 <table>
 	<thead>
 		<tr>
 			<th><strong>title</strong></th>
 			<th><strong>Body</strong></th>
 		</tr>
 	</thead>

 <% @books.each do|book| %>
 	<tbody>
 		<tr>
 			<td><%= book.title %></td>
 			<td><%= book.body %></td>
 			<td><%=link_to "Show",book_path(book.id) %></td>
 			<td><%=link_to "Edit",edit_book_path(book.id) %></td>
 			<td><%=link_to"destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %></td>
 <% end %>
 		</tr>
 	</tbody>
 </table>
<% if @book.errors.any? %>
 <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<h2>New book</h2>
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>


  <h4>Body</h4>
  <%= f.text_area :body %>

   <%= f.submit 'Create Book' %>


<% end %>






